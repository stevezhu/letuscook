{
  "name": "assistant-ext",
  "version": "0.1.0",
  "private": true,
  "description": "Boilerplate for a WXT-based browser extension",
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "scripts": {
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "wxt prepare",
    "test": "tsc --noEmit",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox"
  },
  "dependencies": {
    "@webext-core/messaging": "^2.3.0",
    "@workspace/constants": "workspace:*",
    "@workspace/shadcn": "workspace:*",
    "lucide-react": "^0.563.0",
    "react": "catalog:",
    "react-dom": "catalog:",
    "wxt": "^0.20.15"
  },
  "devDependencies": {
    "@stzhu/eslint-config": "catalog:",
    "@stzhu/tsconfig": "catalog:",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "^5.1.4",
    "@wxt-dev/auto-icons": "^1.1.0",
    "@wxt-dev/module-react": "^1.1.5",
    "eslint": "catalog:",
    "eslint-plugin-oxlint": "^1.46.0",
    "tailwindcss": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "wxt-turbo": "^0.1.0"
  }
}
