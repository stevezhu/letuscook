{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build --color",
    "ci:prepare": "turbo run ci:prepare",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "dev": "turbo run dev --color",
    "format": "oxfmt && prettier -w '**/{ts,js}config{,.?*}.json'",
    "format:check": "oxfmt --check && prettier -c '**/{ts,js}config{,.?*}.json'",
    "lint": "pnpm run format:check && concurrently 'pnpm run lint:fast' 'turbo run lint'",
    "lint:fast": "oxlint --type-aware",
    "lint:fast:fix": "oxlint --type-aware --fix",
    "lint:fix": "pnpm run format && pnpm run lint:fast:fix && turbo run lint:fix",
    "reset-node-modules": "rm -f pnpm-lock.yaml && pnpm -w run clean && pnpm install",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@stzhu/prettier-plugin-tsconfig": "catalog:",
    "concurrently": "^9.2.1",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "oxlint-tsgolint": "^0.12.1",
    "prettier": "^3.8.1",
    "rulesync": "^7.0.0",
    "turbo": "^2.8.7"
  },
  "engines": {
    "node": ">=22",
    "pnpm": "^10.0.0"
  },
  "packageManager": "pnpm@10.29.2"
}
